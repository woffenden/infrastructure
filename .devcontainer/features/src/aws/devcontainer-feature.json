{
  "id": "aws",
  "version": "1.0.0",
  "name": "AWS",
  "description": "AWS functionality: CLI, AWS Vault",
  "options": {
    "installAwsCli": {
      "type": "boolean",
      "description": "Install the AWS CLI (https://github.com/aws/aws-cli)",
      "default": true
    },
    "awsCliVersion": {
      "type": "string",
      "description": "Version of the AWS CLI to install",
      "default": "latest"
    },
    "installAwsVault": {
      "type": "boolean",
      "description": "Install AWS Vault (https://github.com/99designs/aws-vault)",
      "default": true
    },
    "awsVaultVersion": {
      "type": "string",
      "description": "Version of AWS Vault to install",
      "default": "latest"
    }
  },
  "installsAfter": ["./features/src/base"]
}
