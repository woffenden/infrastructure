{
  "id": "aws",
  "version": "1.0.0",
  "name": "AWS",
  "description": "AWS functionality: CLI, SSO CLI",
  "options": {
    "installAwsCli": {
      "type": "boolean",
      "description": "Install the AWS CLI (https://github.com/aws/aws-cli)",
      "default": true
    },
    "awsCliVersion": {
      "type": "string",
      "description": "Version of the AWS CLI to install",
      "default": "latest"
    },
    "installAwsSsoCli": {
      "type": "boolean",
      "description": "Install AWS SSO CLI (https://github.com/synfinatic/aws-sso-cli)",
      "default": true
    },
    "awsSsoCliVersion": {
      "type": "string",
      "description": "Version of AWS SSO CLI to install",
      "default": "latest"
    }
  },
  "installsAfter": ["./features/src/base"]
}
